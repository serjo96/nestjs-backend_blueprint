{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@shared/*": ["src/shared/*"],
      "@user/*": ["src/users/*"]
    }
  },
  "exclude": ["node_modules", "dist", "migrations"]
}
